@{
    ViewBag.Title = "Chat";
}
<h2>Chat</h2>
<div ng-app="AngularChat">
    <div class="container" ng-controller="Shell as vm">
        <div class="chat-container">
            <simple-chat messages="vm.messages"
                         user="vm.user"
                         advisors="vm.advisors"
                         head="Напиши мне!"
                         theme="skyblue"
                         submit-function="vm.sendMessage"
                         visible="true"
                         object="vm.object">
                            
            </simple-chat>
        </div>
    </div>
</div>
@section scripts {
    <!--Script references. -->
    <!--The jQuery library is required and is referenced by default in _Layout.cshtml. -->
    <!--Reference the SignalR library. -->
    <script src="~/Scripts/jquery.signalR-2.2.0.min.js"></script>
    <!--Reference the autogenerated SignalR hub script. -->
    <script src="~/signalr/hubs"></script>
    <script src="~/Scripts/angular.js"></script>
    <script src="~/Scripts/angular-animate.min.js"></script>
    <script src="~/Scripts/highlight.pack.js"></script>
    <script src="~/Scripts/jquery.mCustomScrollbar.min.js"></script>
    <script src="~/Scripts/controllers/chat-controller.js"></script>
    <script src="~/Scripts/controllers/chat-module.js"></script>
    <script src="~/Scripts/controllers/chat-template.js"></script>
    <script src="~/Scripts/services/services.js"></script>
    <!--SignalR script to update the chat page and send messages.-->
